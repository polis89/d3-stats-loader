<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>d3 load status</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/5.12.0/d3.min.js"></script>
</head>

<body>
    <div id="loader-container" class="container" style="width:320px; margin: 0 auto;">

    </div>
</body>

<script>
    var loader = new d3statsloader();

    loader
        .id('loader-container')
        .setValue(20) // initial value
        .init()

    setTimeout(() => {
        loader.setValue(78)
    }, 1000)

    setTimeout(() => {
        loader.setValue(5)
    }, 3000)

    setTimeout(() => {
        loader.setValue(42)
    }, 5000)
</script>

</html>